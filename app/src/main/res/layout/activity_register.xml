<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/reg_scrollView"
    android:scrollbars="vertical" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/reg_email" 
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:hint="@string/enter_user_id"
        android:textColorHint="#ffb9b9b9"
        android:textCursorDrawable="@null"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reg_password"
        android:layout_below="@id/reg_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/enter_password"
        android:textColorHint="#ffb9b9b9"
        android:textCursorDrawable="@null"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/conf_password"
        android:layout_below="@id/reg_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/conf_password"
        android:textColorHint="#ffb9b9b9"
        android:textCursorDrawable="@null"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_securityQuest"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txt_securityQuest"
        android:layout_below="@id/conf_password"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg_security_quest"
        android:layout_below="@id/txt_securityQuest"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:theme="@style/Base.V14.Theme.AppCompat.Dialog" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/sec_answer"
        android:hint="@string/enter_answer"
        android:textColorHint="#ffb9b9b9"
        android:layout_below="@+id/reg_security_quest"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@null"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/agreement"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/agreement"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/sec_answer"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:id="@+id/accept_checkBox"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/agreement"
        android:layout_toLeftOf="@+id/reg_cancel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_continue"
        android:id="@+id/reg_continue"
        android:layout_below="@id/accept_checkBox"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:maxHeight="40dp"
        android:minHeight="40dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_cancel"
        android:id="@+id/reg_cancel"
        android:background="@drawable/button"
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/reg_continue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
 </ScrollView>

