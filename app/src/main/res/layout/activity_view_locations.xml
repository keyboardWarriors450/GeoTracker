<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/car"
    tools:context="com.mycompany.geotracker.controller.ViewLocations"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Map"
        android:id="@+id/viewMap"
        android:clickable="true"
        android:nestedScrollingEnabled="false"
        android:onClick="showMap"
        android:layout_above="@+id/show_location"
        android:layout_toRightOf="@+id/start_service"
        android:layout_toEndOf="@+id/start_service"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start service"
        android:id="@+id/start_service"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Service"
        android:id="@+id/end_service"
        android:layout_alignTop="@+id/start_service"
        android:layout_toRightOf="@+id/viewMap"
        android:layout_toEndOf="@+id/viewMap" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Movement Data"
        android:id="@+id/show_location"
        android:layout_marginBottom="82dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Date"
        android:id="@+id/end_date_text"
        android:background="@android:color/background_light"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/viewMap"
        android:layout_alignStart="@+id/viewMap"
        android:layout_alignRight="@+id/show_location"
        android:layout_alignEnd="@+id/show_location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Date"
        android:id="@+id/start_date_text"
        android:layout_marginBottom="41dp"
        android:background="@android:color/background_light"

        android:textAlignment="center"
        android:layout_above="@+id/end_date_text"
        android:layout_alignRight="@+id/show_location"
        android:layout_alignEnd="@+id/show_location"
        android:layout_alignLeft="@+id/viewMap"
        android:layout_alignStart="@+id/viewMap" />

</RelativeLayout>
